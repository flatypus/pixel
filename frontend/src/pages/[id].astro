---
import Layout from "../layouts/Layout.astro";
const { id } = Astro.params;

fetch(`${import.meta.env.PUBLIC_API_URL}/pixel/${id}`)
  .then((res) => res.json())
  .then((data) => {
    if (data.error) {
      window.location.href = "/";
    }
  })
  .catch((err) => {
    console.error(err);
    window.location.href = "/";
  });
---

<Layout title={`pixel | ${id}`}>
  <h1>{id}</h1>
</Layout>
